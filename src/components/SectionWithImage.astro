---
interface Props {
title: string;
text: string;
image: string;
index: number;
alignment: number;
}

const {title, text, image, index, alignment} = Astro.props;
---

<div class={`section ${!(index % 2) ? 'bkg-primary' : 'bkg-alt'} ${alignment % 2 ? 'right' : 'left'}`}>
  <img src={image} alt="Image" class="image">
  <div class="content">
    <h3 class="title">{title}</h3>
    <p class="text">{text}</p>
</div>
  </div>

<style>
.bkg-primary {
  background-color: var(--background);
}

.bkg-alt {
  background-color: var(--background-alt);
}

.section {
  display: flex;
  height: 250px;
  padding-inline: 5vw;
  padding-block: 5vh;
  gap: 2.5em;
}

.right {
  flex-flow: row-reverse;
  text-align: right;
}

.left {
  flex-flow: row;
}

.image {
  height: 90%;
  margin-block: auto;
}

.content {
  display: flex;
  flex-flow: column;
  gap: 0.3em;
  margin-top: 1em;
}

</style>
