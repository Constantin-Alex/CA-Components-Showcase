---
interface Spec { 
  title: string;
  info: string;
}

interface Props {
  image: string;
  name: string;
  specs: Array<Spec>;
}

const {image, name, specs} = Astro.props;
---

<div class="content">
  <img src={image} alt="Image" class="image">
  <div class="text">
    <h2 class="name">{name}</h2>
    <div class="specs">
      {specs.map((spec, index) => <div class={index < specs.length-1 ? 'spec-bordered' : 'spec'}>
        <p class="spec-title">{spec.title}</p>
        <div class="spec-separator"></div>
        <p class="spec-info">{spec.info}</p>
      </div>)}
    </div>
  </div>
</div>

<style>
.content {
  margin-inline: 10vw; 
  display: flex;
}

.image {
  width: 40%;
}

.text {
  display: flex;
  flex-flow: column;
  gap: 1em;
}

.specs {
  display: flex;
  flex-flow: column;
}

.spec {
  display: flex;
  height: 2em;
  align-items: center;
  font-size: 1.2em;
  gap: 1.5em;
  padding-inline: 1em;
}

.spec-bordered {
  display: flex;
  height: 2em;
  align-items: center;
  font-size: 1.2em;
  gap: 1.5em;
  border-bottom: 1px solid black;
  padding-inline: 1em;
}

.spec-separator {
  height: inherit;
  width: 1px;
  background-color: black;
}

</style>
